.section#results-container.grey.lighten-3(style='display: none')
  .row
    .col.s12.m3.offset-m1
      .card-panel
        h3 Sentiment Summary
        #power-gauge
    .col.s12.m7
      .card-panel
        h3 Word Cloud
        #cloud

  .row
    .col.s12.m3.offset-m1
      .card-panel
        h3 Pace
        p.flow-text#word_rate_label
        p.flow-text words per minute

    .col.s12.m7
      .card-panel
        h3 Pace over Time
        #paceTime

  .row
    .col.s12.m5.offset-m1
      .card-panel
        h3 Entity Extraction
        .preloader-wrapper.big.active.center-block#entityLoader(style='display:block')
          include spinner
        .row
          .col.s4#entityResults1
          .col.s4#entityResults2
          .col.s4#entityResults3
          .col.s4#entityResults4
          .col.s4#entityResults5
          .col.s4#entityResults6
          .col.s4#entityResults7
          .col.s4#entityResults8

    .col.s12.m5
      .card-panel
        h3 Highlighter
        p#highlightedTerms

  .row
    .col.s12.m3.offset-m1
      .card-panel
        h3 Category

    .col.s12.m3
      .card-panel
        h3 Language
        .flow-text English

    .col.s12.m4
      .card-panel
        h3 Document Terms